@model Guardian_Web.Models.DTO.GuardianTask.GuardianTaskDTO

<form asp-action="DeleteTaskGuardian">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">End task</h1>
        <hr />

        <input hidden asp-for="@Model.Id" />
        <div class="row">

            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.TaksName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Description" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Description" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Responsible</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.GuardianModel.Name" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="GuardianTask" asp-action="IndexGuardianTask" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Confirm" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}