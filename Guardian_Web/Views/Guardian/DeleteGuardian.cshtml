@model Guardian_Web.Models.DTO.Guardian.GuardianDTO

<form asp-action="DeleteGuardian">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Remove employee</h1>
        <hr />

        <input hidden asp-for="@Model.Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Age" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Age" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Occupancy" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Adress" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Adress" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Guardian" asp-action="IndexGuardian" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Confirm" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}