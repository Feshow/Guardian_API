@model IEnumerable<Guardian_Web.Models.DTO.Guardian.GuardianDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Guardians</h1>
        </div>
        <div class="col text-end pt=1">
            <a asp-controller="Guardian" asp-action="CreateGuardian" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Guardian</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Adress
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Occupancy</td>
                    <td>@item.Adress</td>
                    <td>
                        <a asp-controller="Guardian" asp-action="UpdateGuardian" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Guardian" asp-action="DeleteGuardian" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>